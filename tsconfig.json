{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2022",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "composite": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "jsx": "react",

    "strict": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "rootDir": "src",
    "outDir": "build"
  }
}